rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read and server-side write access to articles.
    // Client-side writes are not possible as there's no UI for it.
    match /articles/{articleId} {
      allow read, write: if true;
    }

    // Allow only authenticated users (admins) to read and write settings.
    match /settings/{docId} {
      allow read, write: if request.auth != null;
    }
  }
}
