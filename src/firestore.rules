rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to articles, and allow any server-side process to write
    match /articles/{articleId} {
      allow read: if true;
      allow write: if true; 
    }

    // Allow only authenticated users to read and write their own settings
    match /settings/{docId} {
      allow read, write: if request.auth != null;
    }
  }
}
